<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>
</div>

<h2>Comments</h2>
<% post.comments.each do |comment| %>
  <p><strong><%= comment.content %></strong></p>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([post, post.comments.build]) do |f| %>
  <p>
    <%= f.label :content %><br>
    <%= f.text_field :content %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
